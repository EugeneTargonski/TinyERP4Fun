@model TinyERP4Fun.Models.Common.Company

@{
    ViewData["Title"] = Localization.currentLocalizatin["Details"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Localization.currentLocalizatin["Details"]</h1>

<div>
    <h4>@Localization.currentLocalizatin["Company"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Localization.currentLocalizatin["Name"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Localization.currentLocalizatin["TIN"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TIN)
        </dd>
        <dt class="col-sm-2">
            @Localization.currentLocalizatin["TIN2"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TIN2)
        </dd>
        <dt class="col-sm-2">
            @Localization.currentLocalizatin["Country"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City.State.Country.Name)
        </dd>
        <dt class="col-sm-2">
            @Localization.currentLocalizatin["State"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City.State.Name)
        </dd>
        <dt class="col-sm-2">
            @Localization.currentLocalizatin["City"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City.Name)
        </dd>
        <dt class="col-sm-2">
            @Localization.currentLocalizatin["Address"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            @Localization.currentLocalizatin["Address"] 2
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address2)
        </dd>
        <dt class="col-sm-2">
            @Localization.currentLocalizatin["Head Company"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HeadCompany.Name)
        </dd>
        <dt class="col-sm-2">
            @Localization.currentLocalizatin["Base Currency"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BaseCurrency.Code)
        </dd>
        <dt class="col-sm-2">
            @Localization.currentLocalizatin["Our Company"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OurCompany)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">@Localization.currentLocalizatin["Edit"]</a> |
    <a asp-action="Index">@Localization.currentLocalizatin["Back to List"]</a>
</div>
