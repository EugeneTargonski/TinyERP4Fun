@model TinyERP4Fun.Models.Common.Person

@{
    ViewData["Title"] = Localization.currentLocalizatin["Create"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Localization.currentLocalizatin["Create"]</h1>

<h4>@Localization.currentLocalizatin["Person"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                @Localization.currentLocalizatin["First Name"]
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Localization.currentLocalizatin["Last Name"]
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Localization.currentLocalizatin["Birthday"]
                <input asp-for="Birthday" class="form-control" />
                <span asp-validation-for="Birthday" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Localization.currentLocalizatin["User"]
                <select asp-for="UserId" asp-items="ViewBag.Users" class="form-control"></select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsEmployee" /> @Localization.currentLocalizatin["Is Employee"]
                </label>
            </div>
            <div class="form-group">
                @Localization.currentLocalizatin["Company"]
                <select asp-for="CompanyId" asp-items="ViewBag.Companies" class="form-control"></select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsChief" /> @Localization.currentLocalizatin["Is Chief"]
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value=@Localization.currentLocalizatin["Create"] class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Localization.currentLocalizatin["Back to List"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
