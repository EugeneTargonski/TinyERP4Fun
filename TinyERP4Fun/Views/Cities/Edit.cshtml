@model TinyERP4Fun.Models.Common.City

@{
    ViewData["Title"] = Localization.currentLocalizatin["Edit"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Localization.currentLocalizatin["Edit"]</h1>

<h4>@Localization.currentLocalizatin["City"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label class="control-label">@Localization.currentLocalizatin["Name"]</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">@Localization.currentLocalizatin["State"]</label>
                <select asp-for="StateId" asp-items="ViewBag.States" class="form-control" id="state"></select>
            </div>
            <div class="form-group">
                <label class="control-label">@Localization.currentLocalizatin["Country"]</label>
                <select asp-for="State.Country.Id" asp-items="ViewBag.Countries" class="form-control" id="country"></select>
            </div>
            <div class="form-group">
                <input type="submit" value=@Localization.currentLocalizatin["Save"] class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Localization.currentLocalizatin["Back to List"]</a>
</div>

@section Scripts {
    <script type="text/javascript">
    $(function () {

        $('#country').change(function()
        {
            // получаем выбранный id
            var id = $(this).val();
            $.ajax({
                type: 'GET',
                url: '@Url.Action("GetStates")/' + id,
                success: function (data) {
                    // заменяем содержимое присланным частичным представлением
                    $('#state').replaceWith(data);
                }
            });
        });
    })
    </script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
