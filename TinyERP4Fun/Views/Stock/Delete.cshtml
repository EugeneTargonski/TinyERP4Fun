@model TinyERP4Fun.Models.Stock.Stock

@{
    ViewData["Title"] = Localization.currentLocalizatin["Delete"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Localization.currentLocalizatin["Delete"]</h1>

<h3>@Localization.currentLocalizatin["Are you sure you want to delete this?"]</h3>
<div>
    <h4>Stock</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Localization.currentLocalizatin["Item"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.Name)
        </dd>
        <dt class="col-sm-2">
            @Localization.currentLocalizatin["Quantity"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-2">
            @Localization.currentLocalizatin["Warehouse"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Warehouse.Name)
        </dd>
        <dt class="col-sm-2">
            @Localization.currentLocalizatin["User"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
        <dt class="col-sm-2">
            @Localization.currentLocalizatin["Operation Date"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OperDate)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value=@Localization.currentLocalizatin["Delete"] class="btn btn-danger" /> |
        <a asp-action="Index">@Localization.currentLocalizatin["Back to List"]</a>
    </form>
</div>
