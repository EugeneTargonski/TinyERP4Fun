@model TinyERP4Fun.Models.Stock.Stock

@{
    ViewData["Title"] = Localization.currentLocalizatin["Edit"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Localization.currentLocalizatin["Edit"]</h1>

<h4>@Localization.currentLocalizatin["Stock"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                @Localization.currentLocalizatin["Item"]
                <select asp-for="ItemId" class="form-control" asp-items="ViewBag.ItemId"></select>
                <span asp-validation-for="ItemId" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Localization.currentLocalizatin["Quantity"]
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Localization.currentLocalizatin["Warehouse"]
                <select asp-for="WarehouseId" class="form-control" asp-items="ViewBag.WarehouseId"></select>
                <span asp-validation-for="WarehouseId" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Localization.currentLocalizatin["User"]
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Localization.currentLocalizatin["Operation Date"]
                <input asp-for="OperDate" class="form-control" />
                <span asp-validation-for="OperDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value=@Localization.currentLocalizatin["Save"] class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Localization.currentLocalizatin["Back to List"]</a>
</div>

