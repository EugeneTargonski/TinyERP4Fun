@model TinyERP4Fun.ViewModels.ExpencesViewModel

@{
    ViewData["Title"] = Localization.currentLocalizatin["Expences"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Localization.currentLocalizatin["Expences"]</h1>

<p>
    <a asp-action="Create">@Localization.currentLocalizatin["Create New"]</a>
    <a asp-action="IndexAdm">@Localization.currentLocalizatin["Administration"]</a>
    <a href="#" onclick="show_filter(); return false"><span id="sp_sel">@Localization.currentLocalizatin["Filter"]</span></a>
    @Model.Total
</p>

<div id="filter_form" style="display:none">
    <form asp-controller="ExpencesController" asp-action="Index" method="get" name="filter">
        <p>
            @Localization.currentLocalizatin["Currency"]:
            <select asp-for="CurrencyFilter" asp-items="Model.CurrencyFilter" class="form-control">
                <option value="">All</option>
            </select>
        </p>
        <p>
            @Localization.currentLocalizatin["From"]: <input type="date" asp-for="FromFilter" class="form-control" />
            @Localization.currentLocalizatin["To"]: <input type="date" asp-for="ToFilter" class="form-control" />
        </p>
        <p>
            @Localization.currentLocalizatin["Our Company"]:
            <select asp-for="OurCompanyFilter" asp-items="Model.OurCompanyFilter" class="form-control">
                <option value="">All</option>
            </select>
            @Localization.currentLocalizatin["Company"]:
            <select asp-for="CompanyFilter" asp-items="Model.CompanyFilter" class="form-control">
                <option value="">All</option>
            </select>
        </p>
        <p>
            @Localization.currentLocalizatin["Approved"]: <input type="checkbox" asp-for="ApprovedFilter" />
            @Localization.currentLocalizatin["Declined"]: <input type="checkbox" asp-for="DeclinedFilter" />
            @Localization.currentLocalizatin["Not Processed"]: <input type="checkbox" asp-for="NotProcessedFilter" />
        </p>
        <p>
            <input type="submit" value=@Localization.currentLocalizatin["Search"] />
        </p>
</form>
</div>
