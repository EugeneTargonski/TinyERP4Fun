@{
    var prevDisabled = !Model.Expences.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.Expences.HasNextPage ? "disabled" : "";
}

<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.Expences.PageIndex - 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @prevDisabled">
    @Localization.currentLocalizatin["Previous"]
</a>
<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.Expences.PageIndex + 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @nextDisabled">
    @Localization.currentLocalizatin["Next"]
</a>

@section Scripts {
    <script type="text/javascript">

        function show_filter() {
            var d = document;
            var a = d.getElementById('filter_form').style.display;
            d.getElementById('filter_form').style.display = (a == 'none') ? 'block' : 'none';
        }
    </script>
}