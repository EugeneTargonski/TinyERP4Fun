@model TinyERP4Fun.Models.Common.Employee

@{
    ViewData["Title"] = Localization.currentLocalizatin["Delete"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Localization.currentLocalizatin["Delete"]</h1>

<h3>@Localization.currentLocalizatin["Are you sure you want to delete this?"]</h3>
<div>
    <h4>@Localization.currentLocalizatin["Employee"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Localization.currentLocalizatin["First Name"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Person.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Localization.currentLocalizatin["Last Name"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Person.LastName)
        </dd>
        <dt class="col-sm-2">
            @Localization.currentLocalizatin["Number"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Localization.currentLocalizatin["Department"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Department.Name)
        </dd>
        <dt class="col-sm-2">
            @Localization.currentLocalizatin["Position"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Position.Name)
        </dd>
        <dt class="col-sm-2">
            @Localization.currentLocalizatin["Address"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value=@Localization.currentLocalizatin["Delete"] class="btn btn-danger" /> |
        <a asp-action="Index">@Localization.currentLocalizatin["Back to List"]</a>
    </form>
</div>
