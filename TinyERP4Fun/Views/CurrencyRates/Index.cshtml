@model PaginatedList<TinyERP4Fun.Models.Common.CurrencyRates>

@{
    ViewData["Title"] = Localization.currentLocalizatin["Currency Rates"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Localization.currentLocalizatin["Currency Rates"]</h1>


<p>
    <a asp-action="Create">@Localization.currentLocalizatin["Create New"]</a> |
    <a asp-action="UpdateBYN">@Localization.currentLocalizatin["Update BYN from Course Provider"]</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Localization.currentLocalizatin["Currecy Scale"]
            </th>
            <th>
                @Localization.currentLocalizatin["Currency Rate"]
            </th>
            <th>
                @Localization.currentLocalizatin["Date Rate"]
            </th>
            <th>
                @Localization.currentLocalizatin["Currency"]
            </th>
            <th>
                @Localization.currentLocalizatin["Base Currency"]
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CurrecyScale)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CurrencyRate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateRate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Currency.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BaseCurrency.Code)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">@Localization.currentLocalizatin["Edit"]</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">@Localization.currentLocalizatin["Details"]</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">@Localization.currentLocalizatin["Delete"]</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex - 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @prevDisabled">
    @Localization.currentLocalizatin["Previous"]
</a>
<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex + 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @nextDisabled">
    @Localization.currentLocalizatin["Next"]
</a>
